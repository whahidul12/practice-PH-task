{
  "name": "tailwind-sorter",
  "description": "Sort your tailwind classes in a predictable way",
  "version": "1.0.1",
  "main": "index.js",
  "bin": {
    "tailwind-sorter": "bin/index.js"
  },
  "files": [
    "bin",
    "README.md",
    "CHANGELOG.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dejmedus/tailwind-sorter-cli.git"
  },
  "bugs": {
    "url": "https://github.com/dejmedus/tailwind-sorter-cli/issues"
  },
  "type": "module",
  "scripts": {
    "package": "npm run build && rm -rf *.tgz && npm pack && tar -tf *.tgz",
    "publish": "npm publish",
    "clean": "rm -rf bin",
    "build": "npm run clean && tsc",
    "cli": "npm run build && node ./bin/index.js",
    "test": "NODE_OPTIONS=--loader=ts-node/esm mocha src/test/**/*.test.ts"
  },
  "keywords": [
    "tailwind",
    "sorter",
    "tailwindcss"
  ],
  "author": "dejmedus",
  "license": "MIT",
  "dependencies": {
    "commander": "^14.0.0",
    "cosmiconfig": "^9.0.0",
    "fast-glob": "^3.3.3"
  },
  "devDependencies": {
    "@types/commander": "^2.12.0",
    "@types/mocha": "^10.0.10",
    "@types/mock-fs": "^4.13.4",
    "@types/node": "^24.0.1",
    "@types/sinon": "^17.0.4",
    "mocha": "^11.7.1",
    "mock-fs": "^5.5.0",
    "sinon": "^21.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  }
}
